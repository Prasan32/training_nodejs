<div class="container mt-5 p-5" style="border:6px ridge lightblue;">
    <center>
        <h2>Create New Post</h2>
    </center>
    <form method="POST" action="/createPost" enctype="multipart/form-data">
        <div class="form-group p-2">
            <label><b>Title:</b></label>
            <input class="form-control myinput" type="text" name="title">
        </div>

        <div class="form-group p-2">
            <label><b>Description:</b></label>
            <textarea class="form-control" name="description" style="height: 200px;"></textarea>
        </div>

        <div class="form-group p-2">
            <label><b>Image:</b></label>
            <input class="form-control myinput" type="file" name="image">
        </div>

        <div class="form-group p-2">
            <label><b>Author:</b></label>
            <input class="form-control myinput" type="text" name="author">
        </div>
        <br>
        <center><button class="btn btn-primary mt-1" type="submit">Save</button></center>

    </form>
</div>