<div class="container mt-5 p-5" style="border:6px ridge lightblue;">
    <center>
        <h2>Edit Page</h2>
    </center>
    <form method="POST" action="/edit/{{post.id}}" enctype="multipart/form-data">
        <div class="form-group p-2">
            <label><b>Title:</b></label>
            <input class="form-control myinput" type="text" name="title" value="{{post.title}}">
        </div>

        <div class="form-group p-2">
            <label><b>Description:</b></label>
            <textarea class="form-control" name="description" style="height: 200px;">{{post.description}}</textarea>
        </div>

        <div class="form-group p-2">
            <label><b>Image:</b></label>
            <input class="form-control myinput" type="file" name="image">
        </div>

        <div class="form-group p-2">
            <label><b>Author:</b></label>
            <input class="form-control myinput" type="text" name="author" value="{{post.author}}">
        </div>
        <br>
        <center><button class="btn btn-primary mt-1" type="submit">Update</button></center>

    </form>
</div>